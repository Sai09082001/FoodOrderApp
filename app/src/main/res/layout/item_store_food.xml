<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <LinearLayout
     android:gravity="center"
     android:background="@drawable/box"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     <ImageView
         android:layout_marginVertical="10dp"
         android:layout_marginLeft="10dp"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:src="@drawable/storeppy"
         />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_store_food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#000"
            android:fontFamily="@font/robotobold"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_store_food_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá gốc 29.000"
            android:textColor="#707070"
            android:textSize="11dp"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <TextView
             android:id="@+id/tv_store_food_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="118.00đ"
             android:layout_weight="1"
             android:textColor="@color/colorCAM"
             android:fontFamily="@font/robotobold"
             android:textSize="16dp"/>
         <Button
             android:id="@+id/btn_store_food_add"
             android:layout_width="86dp"
             android:layout_height="27dp"
             android:layout_marginRight="10dp"
             android:fontFamily="@font/robotobold"
             android:text="THÊM +"
             android:textColor="#fff"
             android:background="@drawable/boxbutton2"/>
     </LinearLayout>
    </LinearLayout>
 </LinearLayout>
</LinearLayout>